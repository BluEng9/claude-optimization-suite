# Claude API Configuration
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_MODEL=claude-opus-4-1-20250805
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7
CLAUDE_TOP_P=0.95
CLAUDE_TIMEOUT=60
CLAUDE_RETRY_ATTEMPTS=3

# Application Settings
APP_NAME=Claude_Optimizer
APP_ENV=development
APP_DEBUG=true
APP_PORT=8000
APP_HOST=0.0.0.0
SECRET_KEY=your-secret-key-here

# Database Configuration
## PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=claude_optimizer
POSTGRES_USER=claude_user
POSTGRES_PASSWORD=secure_password_here

## MongoDB
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=claude_optimizer
MONGO_USER=admin
MONGO_PASSWORD=secure_password_here

## Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# API Keys & External Services
OPENAI_API_KEY=optional-openai-key
GOOGLE_API_KEY=optional-google-key
AWS_ACCESS_KEY_ID=optional-aws-key
AWS_SECRET_ACCESS_KEY=optional-aws-secret
AWS_REGION=us-east-1

# Payment Processing (Stripe)
STRIPE_PUBLIC_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Email Configuration
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your-sendgrid-key
EMAIL_FROM=noreply@claude-optimizer.com
EMAIL_FROM_NAME=Claude Optimizer

# Monitoring & Analytics
SENTRY_DSN=https://xxx@sentry.io/xxx
GRAFANA_PASSWORD=admin
PROMETHEUS_PUSHGATEWAY=http://localhost:9091

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# Caching
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/claude_optimizer.log
LOG_MAX_SIZE=100M
LOG_MAX_BACKUPS=10

# Security
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
BCRYPT_ROUNDS=12

# Feature Flags
FEATURE_BATCH_PROCESSING=true
FEATURE_ASYNC_PROCESSING=true
FEATURE_ANALYTICS=true
FEATURE_PAYMENT=false
FEATURE_EMAIL_NOTIFICATIONS=true

# Performance
MAX_WORKERS=5
BATCH_SIZE=10
QUEUE_MAX_SIZE=1000
CONNECTION_POOL_SIZE=20

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=10

# Cost Management
COST_WARNING_THRESHOLD=100.00
COST_LIMIT_DAILY=500.00
COST_LIMIT_MONTHLY=10000.00

# Revenue Settings
DEFAULT_CONTENT_PRICE=50.00
DEFAULT_CODE_PRICE=100.00
DEFAULT_ANALYSIS_PRICE=150.00
COMMISSION_RATE=0.20

# Development
DEV_MODE=true
HOT_RELOAD=true
MOCK_API_CALLS=false

# Production
PRODUCTION_URL=https://claude-optimizer.com
CDN_URL=https://cdn.claude-optimizer.com
API_URL=https://api.claude-optimizer.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=claude-optimizer-backups

# Notification Preferences
NOTIFY_ON_ERROR=true
NOTIFY_ON_SUCCESS=false
NOTIFY_ON_REVENUE=true
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx

# Custom Settings
CUSTOM_PROMPT_PREFIX=""
CUSTOM_SYSTEM_MESSAGE=""
MAX_CONTEXT_LENGTH=100000
AUTO_OPTIMIZE_PROMPTS=true

# A/B Testing
AB_TESTING_ENABLED=true
AB_TEST_PERCENTAGE=50

# Marketplace
MARKETPLACE_ENABLED=false
MARKETPLACE_COMMISSION=0.30
MARKETPLACE_PAYOUT_THRESHOLD=100.00